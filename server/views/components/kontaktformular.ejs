<%
  const heading = block?.headline || 'Kontakt';
  const intro = block?.intro || 'Schreiben Sie uns kurz, wir melden uns schnell bei Ihnen.';
  const action = block?.action || '/contact';
%>

<section class="sauber-kontakt section" id="kontakt">
  <div class="section__inner sauber-kontakt__inner">
    <div class="sauber-kontakt__copy">
      <h2 class="sauber-kontakt__title"><%- renderTextWithLinks(heading) %></h2>
      <p class="sauber-kontakt__text"><%- renderTextWithLinks(intro) %></p>
    </div>

    <form class="sauber-kontakt__form" method="post" action="<%= action %>">
      <label class="sauber-kontakt__field">
        <span>Name</span>
        <input type="text" name="name" placeholder="Ihr Name" required>
      </label>
      <label class="sauber-kontakt__field">
        <span>E-Mail</span>
        <input type="email" name="email" placeholder="name@beispiel.de" required>
      </label>
      <label class="sauber-kontakt__field">
        <span>Telefon</span>
        <input type="tel" name="phone" placeholder="+49 30 123456">
      </label>
      <label class="sauber-kontakt__field">
        <span>Nachricht</span>
        <textarea name="message" rows="4" placeholder="Wie kÃ¶nnen wir helfen?" required></textarea>
      </label>
      <button class="sauber-kontakt__button" type="submit">Anfrage senden</button>
    </form>
  </div>
</section>