<article class="page team-page">
  <section class="section team-hero">
    <div class="section__inner team-hero__inner">
      <header class="team-hero__header">
        <h1 class="team-hero__title"><%- renderTextWithLinks(teamContent?.headline || page?.title || '') %></h1>
        <% if (teamContent?.subline) { %>
        <p class="team-hero__subtitle"><%- renderTextWithLinks(teamContent.subline) %></p>
        <% } %>
      </header>
      <%- include('../components/teamSlider', { teamMembers }) %>
    </div>
  </section>

  <section class="section team-about">
    <div class="section__inner team-about__inner">
      <% if (teamContent?.aboutHeadline) { %>
      <h2 class="team-about__title"><%- renderTextWithLinks(teamContent.aboutHeadline) %></h2>
      <% } %>
      <% if (teamContent?.aboutText) { %>
      <% const paragraphs = String(teamContent.aboutText).split(/\r?\n+/).map((paragraph) => paragraph.trim()).filter(Boolean); %>
      <% paragraphs.forEach((paragraph) => { %>
      <p class="team-about__text"><%- renderTextWithLinks(paragraph) %></p>
      <% }) %>
      <% } %>
    </div>
  </section>
</article>